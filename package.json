{
  "name": "deckpad",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "scripts": {
    "---------- YARN EXEC ----------": "",
    "desktop": "lerna --stream --scope @deckpad/desktop exec",
    "mobile": "lerna --stream --scope @deckpad/mobile exec",
    "cli": "lerna --stream --scope @deckpad/cli exec",
    "sdk": "lerna --stream --scope @deckpad/sdk exec",
    "---------- YARN DEV ----------": "",
    "dev:desktop": "lerna --stream --scope @deckpad/desktop run dev",
    "dev:mobile": "lerna --stream --scope @deckpad/mobile run dev",
    "dev:cli": "lerna --stream --scope @deckpad/cli run dev",
    "dev:sdk": "lerna --stream --scope @deckpad/sdk run dev",
    "---------- YARN ADD ----------": "",
    "add:desktop": "lerna --stream --scope @deckpad/desktop exec yarn add",
    "add:mobile": "lerna --stream --scope @deckpad/mobile exec yarn add",
    "add:cli": "lerna --stream --scope @deckpad/cli exec yarn add",
    "add:sdk": "lerna --stream --scope @deckpad/sdk exec yarn add",
    "---------- YARN BUILD ----------": "",
    "build:desktop": "lerna --stream --scope @deckpad/desktop exec yarn build",
    "build:mobile": "lerna --stream --scope @deckpad/mobile exec yarn build",
    "build:cli": "lerna --stream --scope @deckpad/cli exec yarn build",
    "build:sdk": "lerna --stream --scope @deckpad/sdk exec yarn build",
    "---------- GENERAL UTILS ----------": "",
    "delete-node-modules": "pnpm -r exec -- rm -rf node_modules || false"
  },
  "workspaces": {
    "packages": [
      "docs",
      "packages/*",
      "packages/plugins/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/expo",
      "**/expo/**",
      "**/expo-*",
      "**/expo-*/**",
      "**/jest",
      "**/jest/**",
      "**/next",
      "**/next/**",
      "**/react",
      "**/react/**",
      "**/nextron",
      "**/nextron/**",
      "**/electron",
      "**/electron/**",
      "**/electron-*",
      "**/electron-*/**",
      "**/electron-serve",
      "**/electron-serve/**",
      "**/electron-builder",
      "**/electron-builder/**"
    ]
  }
}
