{
  "name": "@deckpad/desktop",
  "productName": "DeckPad",
  "description": "A powerful deck board app for your streaming needs! This is the desktop app, use it as a configurator for your companion mobile app (soon DeckPad on majors Stores).",
  "author": "Benedetto Abbenanti b3nab <benedetto.abbenanti@gmail.com>",
  "homepage": "https://github.com/b3nab/deckpad",
  "version": "0.2.1",
  "type": "module",
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "yarn typecheck:node && yarn typecheck:web",
    "start": "electron-vite preview",
    "dev": "VITE_CJS_TRACE=true electron-vite dev",
    "build": "electron-vite build",
    "build:win": "yarn build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@deckpad/sdk": "workspace:^",
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@headlessui/react": "^1.7.17",
    "@popperjs/core": "^2.11.8",
    "bufferutil": "^4.0.8",
    "default-gateway": "^7.2.2",
    "detect-port": "^1.5.1",
    "electron-plugin-manager": "^1.2.0",
    "electron-pubsub": "^0.2.2",
    "electron-store": "^8.1.0",
    "electron-updater": "6.1.7",
    "execa": "^8.0.1",
    "formik": "^2.4.5",
    "internal-ip": "^7.0.0",
    "loudness": "^0.4.2",
    "pluginclerk": "^6.2.0",
    "react-colorful": "^5.6.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-helmet": "^6.1.0",
    "react-popper": "^2.3.0",
    "react-qr-code": "^2.0.12",
    "socket.io": "^4.7.2",
    "utf-8-validate": "^6.0.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@originjs/vite-plugin-commonjs": "^1.0.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@types/node": "^18.18.12",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0-beta.9",
    "electron-builder": "24.9.1",
    "electron-vite": "^1.0.29",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwind": "^2.2.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "vite-plugin-dynamic-import": "^1.5.0"
  }
}
